<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Base.Theme.TaskList" parent="Theme.Material3.DayNight.NoActionBar">
		<item name="colorPrimary">@color/primaryColor</item>
		<item name="colorPrimaryVariant">@color/primaryLightColor</item>
		<item name="colorPrimaryDark">@color/primaryDarkColor</item>
		<item name="colorSecondary">@color/secondaryColor</item>
		<item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
		<item name="colorOnPrimary">@color/colorOnPrimary</item>
		<item name="colorOnSecondary">@color/colorOnSecondary</item>
		<item name="android:textColorSecondary">@color/secondaryTextColor</item>
		<item name="android:windowBackground">@color/white</item>
		<item name="cardBackgroundColor">@color/cardBgColor</item>
		<item name="android:buttonStyle">@style/Widget.TaskList.Button</item>
		<item name="materialButtonStyle">@style/Widget.TaskList.Button</item>
		<item name="buttonStyle">@style/Widget.TaskList.Button</item>
		<item name="android:imageButtonStyle">@style/Widget.TaskList.Button</item>
		<item name="imageButtonStyle">@style/Widget.TaskList.Button</item>
		<item name="cardViewStyle">@style/Widget.TaskList.CardView</item>
		<item name="materialCardViewStyle">@style/Widget.TaskList.CardView</item>
		<item name="colorControlNormal">@color/colorOnPrimary</item>
		<item name="colorControlHighlight">@color/secondaryDarkColor</item>

		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="Theme.TaskList" parent="Base.Theme.TaskList" />

	<!-- Base application theme. -->
	<color name="primaryColor">@color/md_indigo_400</color>
	<color name="primaryLightColor">@color/md_indigo_300</color>
	<color name="primaryDarkColor">@color/md_indigo_600</color>
	<color name="secondaryColor">@color/md_pink_300</color>
	<color name="secondaryLightColor">@color/md_pink_200</color>
	<color name="secondaryDarkColor">@color/md_pink_400</color>
	<color name="cardBgColor">@color/md_amber_100</color>
	<color name="primaryTextColor">@color/md_black_1000</color>
	<color name="secondaryTextColor">@color/md_grey_600</color>
	<color name="colorOnPrimary">@color/md_black_1000</color>
	<color name="colorOnSecondary">@color/md_black_1000</color>

	<style name="Theme.TaskList.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.TaskList.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

	<style name="Theme.TaskList.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

	<style name="Widget.TaskList.Button" parent="Widget.Material3.Button.ElevatedButton">
		<item name="backgroundTint">@color/primaryColor</item>
		<item name="android:textColor">@color/colorOnPrimary</item>
	</style>

	<style name="Widget.TaskList.ImageButton" parent="Widget.AppCompat.ImageButton">
		<item name="backgroundTint">@color/primaryColor</item>
	</style>

	<style name="Widget.TaskList.IconOnlyButton" parent="Widget.TaskList.Button">
		<item name="iconPadding">0dp</item>
		<item name="iconGravity">textStart</item>
		<item name="iconTint">@color/colorOnPrimary</item>
		<item name="iconSize">20dp</item>
		<item name="contentPadding">0dp</item>
	</style>

	<style name="Widget.TaskList.CardView" parent="Widget.Material3.CardView.Elevated">
		<item name="backgroundTint">@color/cardBgColor</item>
		<item name="android:backgroundTint">@color/cardBgColor</item>
	</style>
</resources>